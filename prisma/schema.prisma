// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model AdaSignageImage {
  id                    Int                    @id @default(autoincrement())
  image_url             String
  image_name            String?
  productConfigurations ProductConfiguration[] @relation("ImageRelation")
}

model AvailableColors {
  id                    Int                    @id @default(autoincrement())
  color_name            String
  hex_value             String
  productConfigurations ProductConfiguration[] @relation("ColorRelation")
}

model ProductConfiguration {
  id                Int      @id @default(autoincrement())
  product_id        String   @unique
  configured_images Json // Array of image IDs and additional price
  colors_available  Int[] // Array of color IDs
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  availableColors  AvailableColors[] @relation("ColorRelation")
  adaSignageImages AdaSignageImage[] @relation("ImageRelation")
}
